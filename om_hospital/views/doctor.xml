<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="hospital_doctor_tree" model="ir.ui.view">
            <field name="name">hospital.doctor.tree</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <tree sample="1">
                    <field name="doctor_name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>
        <record id="hospital_doctor_form" model="ir.ui.view">
            <field name="name">hospital.doctor.form</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="doctor_name"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
            </field>
        </record>
        <record id="view_doctor_search" model="ir.ui.view">
            <field name="name">hospital.doctor.search</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <search string="Doctors">
                    <field name="doctor_name"/>
                    <field name="note"/>
                    <separator/>
                    <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                    <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                    <filter string="Others" name="other" domain="[('gender', '=', 'other')]"/>
                    <separator/>
                    <group expand="1" string="Group By">
                        <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="hospital_doctor_kanban" model="ir.ui.view">
            <field name="name">hospital.doctor.kanban</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="doctor_name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="note"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">

                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            <field name="doctor_name"/>
                                        </li>
                                    </ul>
                                    <ul>
                                        <li>
                                            <field name="gender"/>
                                        </li>
                                    </ul>
                                    <ul>
                                        <li>
                                            <field name="age"/>
                                        </li>
                                    </ul>
                                    <ul>
                                        <li>
                                            <field name="note"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="hospital_doctor_action" model="ir.actions.act_window">
            <field name="name">Hospital Doctor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.doctor</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p>
                    Create new record doctor
                </p>
            </field>
        </record>

        <menuitem id="menu_doctor_root"
                  name="Doctors"
                  parent="hospital_root"
                  sequence="10"/>
        <menuitem id="menu_doctor"
                  name="Doctors"
                  parent="menu_doctor_root"
                  action="hospital_doctor_action"
                  sequence="10"/>
    </data>
</odoo>